pipeline{
    agent any
    stages{
        stage("copying ansible files to ansible server"){
            steps{
                script{
                     echo "copying all neccessary files"

                    sshagent(credentials: ['ssh-ansible-server']) {
                        sh "scp -o StrictHostKeyChecking=no ansilbe/* ubuntu@54.226.129.240:/ubuntu"
                        
                        withCredentials([sshUserPrivateKey(credentialsId: "ssh-ec2-key", keyFileVariable: 'keyfile')]) {
                            sh "scp $keyfile ubuntu@54.226.129.240:/ubuntu/ssh-key.pem"
                        }
                    }
                }

            
            }
            post{
                always{
                    echo "========always========"
                }
                success{
                    echo "========A executed successfully========"
                }
                failure{
                    echo "========A execution failed========"
                }
            }
        }
    }
    post{
        always{
            echo "========always========"
        }
        success{
            echo "========pipeline executed successfully ========"
        }
        failure{
            echo "========pipeline execution failed========"
        }
    }
}